<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Hoàng Khang\n23162038"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edtSo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập các số VD: 1,2,3,4"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btnXuLySo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xuất số chẵn / số lẻ" />

        <EditText
            android:id="@+id/edtChuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập chuỗi bất kỳ"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btnXuLyChuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đảo ngược &amp; In hoa" />

        <TextView
            android:id="@+id/txtKetQua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kết quả sẽ hiển thị tại đây"
            android:layout_marginTop="12dp"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
